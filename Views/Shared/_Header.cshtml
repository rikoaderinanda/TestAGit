@if (ViewData["Header"] == "1")
{
    <!-- Header Start -->
    <div class="gobo-shadow p-3 homepage-gobo-header">
        <div class="container p-0">
            <div class="d-flex align-items-center w-100">
                <div class="main-logo">
                    <a href="@Url.Action("Index", "Home")">
                        <strong style="color:rgb(204, 14, 14);">AG-IT</strong>
                    </a>
                </div>
                <ul class="ms-auto header-right">
                    @* <li>
                        <a href="app-offers.html" class="header-action">
                            <i class="bi bi-percent"></i>
                        </a>
                    </li> *@
                    <li>
                        <a href="app-notifications.html" class="header-action position-relative">
                            <i class="bi bi-bell"></i>
                            <span class="notify-count"></span>
                        </a>
                    </li>
                    <li>
                        <a href="javascript:Logout();" class="header-action position-relative">
                            <span id="txtUserSelected">-</span>
                            <i class="bi bi-forward"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- Header End -->
}
else if (ViewData["Header"] == "2")
{
    <!-- Header Start -->
    <div class="gobo-shadow p-3 homepage-gobo-header">
        <div class="container p-0">
            <div class="d-flex align-items-center w-100">
                <a href="javascript:void(0);" class="header-action" x-data @@click="window.history.back()">
                    <i class="bi bi-arrow-left-circle"></i>
                </a>
                <h6 class="header-title ms-3">
                    <span class="b-color local-area fw-5 fs-6">@ViewData["HeaderName"]</span>
                </h6>
            </div>
        </div>
    </div>
    <!-- Header End -->
    <!-- Header End -->
}